</head>

<body class="header-light sidebar-dark sidebar-expand">
<div id="wrapper" class="wrapper">
    <!-- HEADER & TOP NAVIGATION -->
    <!-- .navbar -->
    <% include ../partials/navbar %>
    <!-- /.navbar -->
    <div class="content-wrapper">
        <!-- SIDEBAR -->
        <% include ../partials/adminAside %>
        <!-- /.site-sidebar -->
        <!-- SIDEBAR -->
        <main class="main-wrapper clearfix">
            <!-- Page Title Area -->
            <div class="row page-title clearfix">
                <div class="page-title-left">
                    <h5 class="mr-0 mr-r-5">TinyMCE Editor</h5>
                    <p class="mr-0 text-muted d-none d-md-inline-block">statistics, charts, events and reports</p>
                </div>
                <!-- /.page-title-left -->
                <div class="page-title-right d-inline-flex">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="index.ejs">Dashboard</a>
                        </li>
                        <li class="breadcrumb-item active">TinyMCE Editor</li>
                    </ol>
                    <div class="d-none d-sm-inline-flex justify-center align-items-center"><a href="javascript: void(0);" class="btn btn-outline-primary mr-l-20 btn-sm btn-rounded hidden-xs hidden-sm ripple" target="_blank">Buy Now</a>
                    </div>
                </div>
                <!-- /.page-title-right -->
            </div>
            <!-- /.page-title -->
            <!-- =================================== -->
            <!-- Different data widgets ============ -->
            <!-- =================================== -->
            <div class="widget-list">
                <div class="row">
                    <div class="col-md-12 widget-holder">
                        <div class="widget-bg">
                            <div class="widget-body">
                                <h5 class="box-title mr-b-0">افزودن تمرین جدید</h5>
                                <br><br>
                                <form action="<% if( locals.practice ){ %><%=  practice._id %><% }else{ %>add-practice<% } %>" method="POST" enctype="multipart/form-data">
                                    
                                    <div class="form-group mr-b-30">
                                        <h5 class="box-title mr-b-0">گزینه درست</h5>
                                        <p class="text-muted">یک متن تستی</p>
                                        <select class="form-control" id="l13" name="trueOption">
                                            <option <% if( locals.practice ){ %><% if(practice.trueOption == "خشم"){ %> selected <% } %><% } %>>خشم</option>
                                            <option<% if( locals.practice ){ %><% if(practice.trueOption == "انزجار"){ %> selected <% } %><% } %>>انزجار</option>
                                            <option<% if( locals.practice ){ %><% if(practice.trueOption == "غم"){ %> selected <% } %><% } %>>غم</option>
                                            <option<% if( locals.practice ){ %><% if(practice.trueOption == "شادی"){ %> selected <% } %><% } %>>شادی</option>
                                            <option<% if( locals.practice ){ %><% if(practice.trueOption == "تعجب"){ %> selected <% } %><% } %>>تعجب</option>
                                            <option<% if( locals.practice ){ %><% if(practice.trueOption == "ترس"){ %> selected <% } %><% } %>>ترس</option>
                                            <option<% if( locals.practice ){ %><% if(practice.trueOption == "تمسخر"){ %> selected <% } %><% } %>>تمسخر</option>
                                        </select>
                                    </div>
                                    <div class="form-group mr-b-30">
                                        <h5 class="box-title mr-b-0">عکس سوال را انتخاب کنید</h5>
                                        <p class="text-muted">یک متن تستی</p>
                                        <input type="file" name="file">
                                    </div>
                                    <br>
                                    <button class="btn btn-success btn-rounded ripple" type="submit" id="submit" style="margin: auto; display: block;"><i class="material-icons list-icon">check</i>  <span>Save</span>
                                    </button>
                                </form>
                                <br>
                                <% if(locals.msg){ %>
                                    <% if(msg == "saved"){ %>
                                    <div class="alert alert-icon alert-success border-success alert-dismissible fade show" role="alert">
                                        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">×</span></button>
                                        <i class="material-icons list-icon">check_circle</i>  <strong>Well done!</strong> You successfully saved lesson.
                                    </div>
                                    <% }else{ %>
                                        <div class="alert alert-icon alert-danger border-danger alert-dismissible fade show"
                                             role="alert">
                                            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">×</span></button>
                                            <i class="material-icons list-icon">not_interested</i>
                                            <strong>Oh Oh!</strong> something went wrong err: <%= msg %>.
                                        </div>
                                    <% } %>
                                <% } %>
                            </div>
                            <!-- /.widget-body -->
                        </div>
                        <!-- /.widget-bg -->
                    </div>
                    <!-- /.col-md-12 -->
                </div>
                <!-- /.row -->
            </div>
            <!-- /.widget-list -->
        </main>
        <!-- /.main-wrappper -->
        <!-- RIGHT SIDEBAR -->
        <aside class="right-sidebar scrollbar-enabled">
            <div class="sidebar-chat" data-plugin="chat-sidebar">
                <div class="sidebar-chat-info">
