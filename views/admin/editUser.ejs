        <!-- /.site-sidebar -->
        <main class="main-wrapper clearfix">
            <!-- Page Title Area -->
            <div class="row page-title clearfix">
                <div class="page-title-left">
                    <h5 class="mr-0 mr-r-5">Edit User</h5>
                </div>
                <!-- /.page-title-left -->
            </div>
            <!-- /.page-title -->
            <!-- =================================== -->
            <!-- Different data widgets ============ -->
            <!-- =================================== -->
            <div class="widget-list">
                <div class="row">
                    <div class="col-md-12 widget-holder">
                        <div class="widget-bg">
                            <div class="widget-body clearfix">
                                <form action="<% if( locals.user ){ %><%=  user.email %><% }else{ %>add-user<% } %>" method="POST">
                                    <div class="form-group row">
                                        <label class="col-md-3 col-form-label" for="111">Email</label>
                                        <div class="col-md-9">
                                            <div class="form-input-icon form-input-icon-right"><i class="material-icons list-icon">mail_outline</i>
                                                <input class="form-control" name="email" id="111" <% if( locals.user ){ %>placeholder="<%=  user.email %>"  disabled="" <% } %> type="text">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-md-3 col-form-label" for="l17">Username</label>
                                        <div class="col-md-9">
                                            <div class="form-input-icon form-input-icon-right"><i class="material-icons list-icon">account_circle</i>
                                                <input class="form-control" name="username" id="l17" <% if( locals.user ){ %>placeholder="<%=  user.username %>"  disabled="" <% } %> type="text">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-md-3 col-form-label" for="113">Name</label>
                                        <div class="col-md-9">
                                            <input class="form-control" name="name" id="113" placeholder="Name"  <% if( locals.user ){ %>value="<%=  user.name %>" <% } %> type="text">
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-md-3 col-form-label" for="114">Family</label>
                                        <div class="col-md-9">
                                            <input class="form-control" name="family" id="114" placeholder="Family" <% if( locals.user ){ %>value="<%=  user.family %>" <% } %> type="text">
                                        </div>
                                    </div>

                                    <div class="form-group row">
                                        <label class="col-md-3 col-form-label" for="115">Sex</label>
                                        <div class="col-md-9" id="115">
                                            <div class="radiobox radio-info">
                                                <label>
                                                    <input type="radio" name="sex" value="Male" <% if( locals.user ){ %><% if( user.sex == "Male" ){ %> checked <% } %><% } %>> <span class="label-text">Male</span>
                                                </label>
                                            </div>
                                            <!-- /.radiobox -->
                                            <div class="radiobox radio-danger">
                                                <label>
                                                    <input type="radio" name="sex" value="Female" <% if( locals.user ){ %><% if( user.sex == "Female" ){ %> checked <% } %><% } %>> <span class="label-text">Female</span>
                                                </label>
                                            </div>
                                            <!-- /.radiobox -->
                                        </div>
                                    </div>

                                    <div class="form-group row">
                                        <label class="col-md-3 col-form-label" for="l7">Age</label>
                                        <div class="col-md-9">
