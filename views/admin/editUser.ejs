                                                <option name="Option 2" <% if( locals.user ){ %><% if( user.edu == "فوق دیپلم" ){ %> selected <% } %><% } %>>فوق دیپلم</option>
                                                <option name="Option 3" <% if( locals.user ){ %><% if( user.edu == "لیسانس" ){ %> selected <% } %><% } %>>لیسانس</option>
                                                <option name="Option 4" <% if( locals.user ){ %><% if( user.edu == "فوق لیسانس" ){ %> selected <% } %><% } %>>فوق لیسانس</option>
                                                <option name="Option 5" <% if( locals.user ){ %><% if( user.edu == "دکتری" ){ %> selected <% } %><% } %>>دکتری</option>
                                            </select>
                                        </div>
                                    </div>

                                    <div class="form-group row">
                                        <label class="col-md-3 col-form-label" for="l7">Job</label>
                                        <div class="col-md-9">
                                            <input class="form-control" name="job" id="l7" placeholder="Job" type="text" <% if( locals.user ){ %>value="<%=  user.job %>" <% } %>>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-md-3 col-form-label" for="115">marriage</label>
                                        <div class="col-md-9" id="115">
                                            <div class="radiobox radio-info">
                                                <label>
                                                    <input type="radio" name="marriage" value="true" <% if( locals.user ){ %><% if( user.marriage == true ){ %> checked <% } %><% } %>> <span class="label-text">married</span>
                                                </label>
                                            </div>
                                            <!-- /.radiobox -->
                                            <div class="radiobox radio-danger">
                                                <label>
                                                    <input type="radio" name="marriage" value="false" <% if( locals.user ){ %><% if( user.marriage == false ){ %> checked <% } %><% } %>> <span class="label-text">single</span>
                                                </label>
                                            </div>
                                            <!-- /.radiobox -->
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-md-3 col-form-label" for="l6">address</label>
                                        <div class="col-md-9">
                                            <div class="form-input-icon"><i class="material-icons list-icon">address</i>
                                                <input class="form-control" id="l6" name="address"  placeholder="address"  type="text" <% if( locals.user ){ %>value="<%=  user.address %>" <% } %>>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-md-3 col-form-label" for="115">status</label>
                                        <div class="col-md-9" id="115">
                                            <div class="radiobox radio-info">
                                                <label>
                                                    <input type="radio" name="status" value="true" <% if( locals.user ){ %><% if( user.status == true ){ %> checked <% } %><% } %>> <span class="label-text">اطلاعات تکمیل شده</span>
                                                </label>
                                            </div>
                                            <!-- /.radiobox -->
                                            <div class="radiobox radio-danger">
                                                <label>
                                                    <input type="radio" name="status" value="false" <% if( locals.user ){ %><% if( user.status == false ){ %> checked <% } %><% } %>> <span class="label-text">اطلاعات تکمیل نشده</span>
                                                </label>
                                            </div>
                                            <!-- /.radiobox -->
                                        </div>
                                    </div>
                                    <div class="form-actions">
                                        <div class="form-group row">
                                            <div class="col-md-9 ml-md-auto btn-list">
                                                <button class="btn btn-primary btn-rounded" type="submit">Submit</button>
                                            </div>
                                        </div>
                                    </div>
                                </form>
                            </div>
                            <!-- /.widget-body -->
                        </div>
                        <!-- /.widget-bg -->
                    </div>
                    <!-- /.widget-holder -->
                    <div class="col-md-6 widget-holder">
                        <div class="widget-bg">
                            <div class="widget-body clearfix">
                                <% if(locals.allTests){ %>
                                    <p style="text-align:center">تعداد سوالات <%=allTests %></p>
                                    <% if(locals.user){ %>
                                        <p style="text-align:center" id="firstMark">تعداد پاسخ های درست پیش آزمون : <%=user.firstTest.mark %></p>
                                        <p style="text-align:center" id="lastMark">تعداد پاسخ های درست پس آزمون : <%=user.lastTest.mark %></p>
                                        <p style="text-align:center">درصد پاسخ گویی پیش آزمون : <%-((100/allTests) * user.firstTest.mark).toFixed(2) %></p>
                                        <p style="text-align:center">درصد پاسخ گویی پس آزمون : <%-((100/allTests) * user.lastTest.mark).toFixed(2) %></p>
                                    <% } %>
                                <% } %>
                            </div>
                            <!-- /.widget-body -->
                        </div>
                        <!-- /.widget-bg -->
                    </div>
                    <!-- /.widget-holder -->
                    <div class="col-md-6 widget-holder">
                        <div class="widget-bg">
                            <div class="widget-body clearfix">
                                <canvas id="chartJsBar" height="150"></canvas>
                            </div>
                            <!-- /.widget-body -->
                        </div>
                        <!-- /.widget-bg -->
                    </div>
                    <!-- /.widget-holder -->
                </div>
                <!-- /.row -->
            </div>
            <!-- /.widget-list -->
        </main>
        <!-- /.main-wrapper -->
