<!-- Scripts -->
<% include ../partials/scripts %>
<script>
    document.onkeydown = function(e) {
    if(event.keyCode == 123) {
        return false;
    }
    if(e.ctrlKey && e.shiftKey && e.keyCode == 'I'.charCodeAt(0)) {
        return false;
    }
    if(e.ctrlKey && e.shiftKey && e.keyCode == 'C'.charCodeAt(0)) {
        return false;
    }
    if(e.ctrlKey && e.shiftKey && e.keyCode == 'J'.charCodeAt(0)) {
        return false;
    }
    if(e.ctrlKey && e.keyCode == 'U'.charCodeAt(0)) {
        return false;
    }
    }
    $(document).ready(function(){
        $("#start").click(function(){
            $("#inst").remove();
            $("#showLesson").removeClass("hide");
        });
        <% if(Categories.length > 0){ c = 0; %>
            <% Categories.forEach(function(category) { c++; %>
                $("#next<%= category._id%>").click(function(){
                    $.post("/dashboard/lesson" ,{ category : "<%= category._id%>" } , function (data) {
                        if (data['status'] == 200) {
                            $('#tab-bordered-<%= c%>').removeClass('active');
                            $('#<%= c%>').removeClass('active');
                            $('#tab-bordered-<%= c + 1%>').addClass('active');
                            $('#tab-bordered-<%= c + 1%>').removeClass('hide');
                            $('#<%= c + 1%>').addClass('active');
                            $('#<%= c + 1%>').removeClass('hide');
                            window.scrollTo({ top: 0, behavior: 'smooth' });
                        }
                    });
                });
            <% }); %>
        <% } %>
    });
</script>
