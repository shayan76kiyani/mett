                                                        <button class="btn btn-info mr-r-10 mr-b-10" id="next<%= category._id%>" style="padding: 8px 30px;">بعدی</button>
                                                    </div>
                                                </div>
                                            <% }); %>
                                        <% } %>
                                        <% if(Categories.length == b || Categories.length == 0){ b++;%>
                                            <div class="tab-pane <% if(a != 1 ){ %> hide<% } else if (a == 1) {%> active <% } %>" id="tab-bordered-<%= b%>">
                                                <div style="display: table; margin: 20px auto 0;">
                                                    <form action="/dashboard/lesson" method="POST">
                                                        <input class="btn btn-info mr-r-10 mr-b-10" style="padding: 8px 30px;" type="submit" name="done" value="مرحله بعد">
                                                    </form>
                                                </div>
                                            </div>
                                        <% } %>
                                    </div>
                                    <!-- /.tab-content -->
                                </div>
                                <!-- /.tabs -->
                            </div>
                            <!-- /.widget-body -->
                        </div>
                        <!-- /.widget-bg -->
                    </div>
                    <!-- /.widget-holder -->
