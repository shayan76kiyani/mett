<!-- Scripts -->
<% include ../partials/scripts %>
<script>
    $(document).ready(function(){
        <% if(Tests.length > 0){b=0; %>
            <% Tests.forEach(function(test) {b++; %>
                $("#ShowPic<%= test._id %>").click(function(){
                    $("#ShowPic<%= test._id %>").remove();
                    setTimeout(function() {
                        $("#pic<%= test._id %>").html('<a href="#"><img class="my-0" src="<%= test.pic %>" alt=""></a>');
                        setTimeout(function() {
                            $("#pic<%= test._id %>").html('<a href="#"><img class="my-0" src="/assets/demo/e-commerce/1.jpg" alt=""></a>');
                        }, 300);
                    }, 1000);
                });
                <% test.options.forEach(function(option) { %>
                    $("#<%= option._id %>").click(function(){
                        $.post("/dashboard/first-exam" ,{ option : "<%= option._id %>" } , function (data) {
                            if (data['status'] == 200) {
                                $('#exam<%= b%>').remove();       
                                $("#exam<%= b + 1%>").removeClass('hide');
                            }
                            else {
                                $('#exam<%= a%>').remove();
                                $("#exam<%= b + 1%>").removeClass('hide');
                            }
                        });
                    });
                <% }); %>
            <% }); %>
        <% } %>
    });
</script>
</body>

</html>
