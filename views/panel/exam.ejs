<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.4.0/Chart.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.6.0/Chart.bundle.min.js"></script>
<script>
    $(document).ready(function(){
        var ctx = document.getElementById("chartJsPie");
      if ( ctx === null ) return;

      var a = <%=mark %>;
      var b = <%=allTests %> - <%=mark %>;
      var ctx3 = document.getElementById("chartJsPie").getContext("2d");
      $("#start").click(function(){
            $("#inst").remove();
            $("#exam1").removeClass("hide");
        });
      if ($('#exam<%= Tests.length + 1 %>').hasClass("hide")) {
        }else {
            var data3 = {
                labels: [
                "درست",
                "غلط"
                ],
                datasets: [
                {
                    data: [1*a , 1*b],
                    backgroundColor: [
                    "#545d73",
                    "#dd4444"
                    ],
                    hoverBackgroundColor: [
                    "#4a5368",
                    "#bd3b47"
                    ]
                }]
            };
            var chartJsPie = new Chart(ctx3,{
                type: "pie",
                data: data3,
                responsive: true,
                options: {
                    legend: {
                    display: false
                    },
                    tooltips: {
                    mode: 'index',
                    intersect: false,
                    titleFontColor: "#000",
                    titleMarginBottom: 0,
                    backgroundColor: "rgba(255,255,255,.9)",
                    bodyFontColor: "#000",
                    borderColor: "#e9e9e9",
                    bodySpacing: 0,
                    borderWidth: 0,
                    xPadding: 10,
                    yPadding: 10,
                    },
                }
            });
        }
        <% if(Tests.length > 0){b=0; %>
            <% Tests.forEach(function(test) {b++; %>
                $("#ShowPic<%= test._id %>").click(function(){
                    $("#ShowPic<%= test._id %>").remove();
                    setTimeout(function() {
                        $("#firstPic<%= test._id %>").toggleClass("hide");
                        $("#secondPic<%= test._id %>").toggleClass("hide");
                        setTimeout(function() {
                            $("#firstPic<%= test._id %>").toggleClass("hide");
                            $("#secondPic<%= test._id %>").toggleClass("hide");
                        }, <% if( locals.speed ){ %><%=speed %><% }%>);
                    }, 1000);
                });
                <% test.options.forEach(function(option) { %>
                    $("#<%= option._id %>").click(function(){
                        $.post("/dashboard/<% if( locals.firstTestMark ){ %>last-exam<% }else{ %>first-exam<% } %>" ,{ option : "<%= option._id %>" } , function (data) {
                            if (data['status'] == 200) {
                                $('#exam<%= b%>').remove();       
                                $("#exam<%= b + 1%>").removeClass('hide');
                                $("#mark").html('تعداد پاسخ های درست : ' + data['mark']);
                                $("#oldMark").remove();
                                $("#precent").html('درصد پاسخ گویی : ' + ((100/<%- allTests %>)*data['mark']).toFixed(2));
                                $("#oldPrecent").remove();
                                a = data['mark'];
                                b = <%=allTests%> - data['mark'];
                                $(document).trigger('exam<%= b + 1%>');
                            }
                        });
                    });
                <% }); %>
            <% }); %>
        <% } %>
        $(document).on('exam<%= Tests.length + 1 %>', function() {
            var data3 = {
                labels: [
                "درست",
                "غلط"
                ],
                datasets: [
                {
                    data: [1*a , 1*b],
                    backgroundColor: [
                    "#545d73",
                    "#dd4444"
                    ],
                    hoverBackgroundColor: [
                    "#4a5368",
                    "#bd3b47"
                    ]
                }]
            };
            var chartJsPie = new Chart(ctx3,{
                type: "pie",
                data: data3,
                responsive: true,
                options: {
                    legend: {
                    display: false
                    },
                    tooltips: {
                    mode: 'index',
                    intersect: false,
                    titleFontColor: "#000",
                    titleMarginBottom: 0,
                    backgroundColor: "rgba(255,255,255,.9)",
                    bodyFontColor: "#000",
                    borderColor: "#e9e9e9",
                    bodySpacing: 0,
                    borderWidth: 0,
                    xPadding: 10,
                    yPadding: 10,
                    },
                }
            });
        });
    });
</script>
