<!DOCTYPE html>
<html dir="rtl" lang="fa-IR">

<head>
    <% include ../partials/head %>
    <style>
        .hide{
            display: none;
        }
    </style>
</head>

<body class="header-light sidebar-dark sidebar-expand">
<div id="wrapper" class="wrapper">
    <!-- .navbar -->
    <% include ../partials/navbar %>
    <!-- /.navbar -->
    <div class="content-wrapper">
        <!-- SIDEBAR -->
        <% include ../partials/aside %>
        <!-- SIDEBAR -->
        <main class="main-wrapper clearfix">
            <!-- Page Title Area -->
            <div class="row page-title clearfix">
                <div class="page-title-left">
                    <h5 class="mr-0 ml-r-5"><%= title %></h5>
                    <p class="mr-0 text-muted d-none d-md-inline-block">statistics, charts, events and reports</p>
                </div>
                <!-- /.page-title-left -->
                <div class="page-title-right d-inline-flex">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="index.ejs">Dashboard</a>
                        </li>
                        <li class="breadcrumb-item active">E-Commerce Horizontal Products</li>
                    </ol>
                </div>
                <!-- /.page-title-right -->
            </div>
            <!-- /.page-title -->
            <!-- =================================== -->
            <!-- Different data widgets ============ -->
            <!-- =================================== -->
            <div class="widget-list">
                <div class="row">
                    <div class="col-md-12 widget-holder">
                        <div class="widget-bg-transparent">
                            <div class="widget-body clearfix">
                                <!-- Products List -->
                                <ul class="ecommerce-products ecommerce-horizontal-products list-unstyled">
                                    <%  a=0; if(Tests.length > 0){%>
                                        <% Tests.forEach(function(test) {a++; %>
                                            <li class="media <% if(a != 1 ){ %>hide<% } %>" id="exam<%= a%>">
                                                <div class="d-flex mr-0 product-image" id="pic<%= test._id %>">
                                                    <a href="">
                                                        <img class="my-0" src="/assets/demo/e-commerce/1.jpg" alt="">
                                                    </a>
                                                </div>
                                                <div class="media-body">
                                                    <section>
                                                        <p>تصویر <%= a%>
                                                            <button class="btn btn-outline-warning mr-r-10 mr-b-10 float-left" id="ShowPic<%= test._id%>">Show Picture</button>
                                                        </p>
                                                        <hr style="margin-top: 35px;">
                                                        <div class="button-box mr-t-20">
                                                            <% test.options.forEach(function(option) { %>
                                                                <% if(option.option != ""){%>
                                                                    <button class="btn btn-outline-info mr-r-10 mr-b-10" id="<%= option._id %>"><%= option.option %></button>
                                                                <%}%>
                                                            <% }); %>
                                                        </div>
                                                    </section>
                                                </div>
                                            </li>
                                        <% }); %>
                                    <% } %>
                                    <% if(Tests.length == a || Tests.length == 0){ a++;%>
                                        <li class="media <% if(a != 1 ){ %> hide <% } %>" id="exam<%= a%>">
                                            <div class="media-body">
                                                <section>
                                                    <p style="text-align:center"> سوالات به پایان رسیدند</p>
                                                    <hr style="margin-top: 35px;">
                                                    <div class="button-box mr-t-20">
                                                            <form action="/dashboard/first-exam" method="POST">
                                                                <input  class="btn btn-outline-info mr-r-10 mr-b-10" style="margin: 0 auto !important; display: block;" type="submit" name="done" value="مرحله بعد">
                                                            </form>
                                                    </div>
                                                </section>
                                            </div>
                                        </li>
                                    <% } %>

                                </ul>
                                <!-- /.ecommerce-products -->
                                <!-- Product Navigation -->
                            </div>
                            <!-- /.widget-body -->
                        </div>
                        <!-- /.widget-bg -->
                    </div>
                    <!-- /.widget-holder -->
                </div>
                <!-- /.row -->
            </div>
            <!-- /.widget-list -->
        </main>
        <!-- /.main-wrappper -->
        <!-- RIGHT SIDEBAR -->
