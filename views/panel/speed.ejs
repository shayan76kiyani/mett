                    </form>
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.chat-panel -->
    </div>
    <!-- /.content-wrapper -->
    <!-- FOOTER -->
    <% include ../partials/footer %>
</div>
<!--/ #wrapper -->
<!-- Scripts -->
<% include ../partials/scripts %>
<script src="https://cdnjs.cloudflare.com/ajax/libs/ion-rangeslider/2.1.7/js/ion.rangeSlider.min.js"></script>
<script>
    $(document).ready(function(){
        $("#test").click(function(){
            setTimeout(function() {
                $("#firstTestPic").toggleClass("hide");
                $("#secondTestPic").toggleClass("hide");
                setTimeout(function() {
                    $("#firstTestPic").toggleClass("hide");
                    $("#secondTestPic").toggleClass("hide");
                }, $('#speed').val() );
            }, 1000);
        });
    });
</script>
</body>

</html>
